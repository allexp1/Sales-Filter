# Server Configuration
NODE_ENV=development
PORT=3010

# Database
DATABASE_URL=./database.sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@leadscorer.com

# OSINT API Keys
# DNS History & Reverse Lookup
SECURITYTRAILS_API_KEY=your_securitytrails_api_key

# Tech Stack Fingerprinting
BUILTWITH_API_KEY=your_builtwith_api_key
WAPPALYZER_API_KEY=your_wappalyzer_api_key

# Traffic Estimates
SIMILARWEB_API_KEY=your_similarweb_api_key

# Business Information
GOOGLE_PLACES_API_KEY=your_google_places_api_key
YELP_API_KEY=your_yelp_api_key

# Email Risk Assessment
HIBP_API_KEY=your_hibp_api_key
HUNTER_API_KEY=your_hunter_api_key

# GitHub Search
GITHUB_TOKEN=your_github_personal_access_token

# Security Scans
SHODAN_API_KEY=your_shodan_api_key
CENSYS_API_ID=your_censys_api_id
CENSYS_API_SECRET=your_censys_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.xlsx,.xls,.csv

# Job Processing
JOB_CONCURRENCY=5
JOB_TIMEOUT_MS=300000
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY_MS=5000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=604800000

# API Rate Limits (per service)
OSINT_API_DELAY_MS=1000
OSINT_BATCH_SIZE=10

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_API_ACCESS=true

# Development Settings
MOCK_OSINT_APIS=false
SKIP_AUTH=false