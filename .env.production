# Sales Filter v0.8 - Production Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# Flask Configuration
# =============================================================================
SECRET_KEY=your-super-secret-key-here-generate-with-openssl-rand-hex-32
FLASK_ENV=production
FLASK_DEBUG=False

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (default for simple deployments)
DATABASE_URL=sqlite:///opt/sales-filter/sales_filter_v08.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/sales_filter_db

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/sales_filter_db

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Sales Filter v0.8
APP_URL=https://your-domain.com
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/opt/sales-filter/uploads
PROCESSED_FOLDER=/opt/sales-filter/processed_files

# =============================================================================
# Security Settings
# =============================================================================
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# =============================================================================
# API Keys (Optional - Add your keys for enhanced features)
# =============================================================================

# OpenCorporates (500 requests/month free)
# Get your key at: https://opencorporates.com/api_accounts/new
OPENCORPORATES_API_KEY=

# Clearbit (100 lookups/month free)
# Get your key at: https://clearbit.com/pricing
CLEARBIT_API_KEY=

# Twilio (Free trial with credits)
# Get your credentials at: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# GitHub (Optional, for enhanced developer detection)
# Create token at: https://github.com/settings/tokens
GITHUB_TOKEN=

# =============================================================================
# Caching Configuration
# =============================================================================
# Redis (optional, for improved performance)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=3600

# =============================================================================
# Rate Limiting
# =============================================================================
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/sales-filter/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# Performance Settings
# =============================================================================
# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# Maximum file upload size (16MB)
MAX_CONTENT_LENGTH=16777216

# Request timeout (in seconds)
REQUEST_TIMEOUT=300

# =============================================================================
# Monitoring & Analytics (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# =============================================================================
# Backup Configuration (Optional)
# =============================================================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_GITHUB_VERIFICATION=True
ENABLE_COMPANY_ENRICHMENT=True
ENABLE_PHONE_LOOKUP=True
ENABLE_ADVANCED_INTELLIGENCE=True
ENABLE_GEOGRAPHIC_SCORING=True
ENABLE_INDUSTRY_DETECTION=True

# =============================================================================
# Development/Testing (Set to False in production)
# =============================================================================
TESTING=False
DEBUG_TOOLBAR=False